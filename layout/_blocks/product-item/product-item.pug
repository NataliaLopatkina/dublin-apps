mixin product-item(item)
    div(class="product-item")
        img(class="product-item__img" src="images/i-pad/" + item.image + ".png" 
        srcset="images/i-pad/" + item.image + "@2x" + ".png" + " 2x" alt="Product")
        p(class="subtitle product-item__title") !{item.title}
        p(class="text product-item__text") !{item.text}
        a(class="button button--size-m product-item__link" href="product-inner-page.html") Read more
